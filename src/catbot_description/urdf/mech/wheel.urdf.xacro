<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="wheel" params="side radius width collision_offset pos_x pos_y pos_z mass visual_yaw">
    <link name="${side}_wheel_link">
      <visual>
        <origin xyz="0 0 0" rpy="${pi/2} 0 ${visual_yaw}"/>
        <geometry>
          <mesh filename="file://$(find catbot_description)/meshes/visual/wheel_assm_visual.stl"/>
        </geometry>
        <!-- <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <geometry>
          <cylinder radius="${radius}" length="${width}"/>
        </geometry> -->
        <material name="wheel_assm_material">
        <color rgba="0.34876043041436377568 0.28454440741211711741 0.12249285133838178075 1.0" />
      </material>
      </visual>
      <collision>
        <origin xyz="0 ${collision_offset} 0" rpy="${pi/2} 0 0"/>
        <geometry>
          <cylinder radius="${radius}" length="${width}"/>
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="${mass}"/>
        <inertia ixx="${(2/5) * mass * (radius * radius)}" ixy="0" ixz="0"
                 iyy="${(2/5) * mass * (radius * radius)}" iyz="0"
                 izz="${(2/5) * mass * (radius * radius)}" />
      </inertial>
    </link>
    <gazebo reference="${side}_wheel_link">  
      <material>Gazebo/Black</material>
    </gazebo>
    <joint name="${side}_wheel_joint" type="continuous">
      <axis xyz="0 1 0" />
      <parent link="base_link"/>
      <child link="${side}_wheel_link"/>
      <origin xyz="${pos_x} ${pos_y} ${pos_z}" rpy="0 0 0"/>
    </joint>
  </xacro:macro>
</robot>
